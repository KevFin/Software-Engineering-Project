					$username = "root";
					$password = "";
					$dbname = "mygovhospital";
					$con = new mysqli($servername, $username, $password, $dbname);
					$name=$_POST['name'];
					$address=$_POST['address'];
					$phoneNum=$_POST['phoneNum'];
					$longitude=$_POST['longitude'];
					$latitude=$_POST['latitude'];
					if(isset($_POST['submit']))
					{
						$sql1 = "INSERT INTO hospital (name, address, phoneNum, longitude, latitude, hshow) 
																VALUES ('$name','$address','$phoneNum','$longitude','$latitude','Y')";
					}
					else if(isset($_POST['update']))
					{
						$hospitalID=$_SESSION['hospitalID'];
						$sql1 = "UPDATE hospital SET name='".$name."',address='".$address."',phoneNum='".$phoneNum."',longitude='".$longitude."',latitude='".$latitude."' WHERE hospitalID=".$hospitalID."";
					}
					if (mysqli_query($con, $sql1))
						{
							header('location:admin.php');						
						}
					else
					{
						echo "Error.";
					}
				
