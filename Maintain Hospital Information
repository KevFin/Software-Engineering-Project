			<?php
			$servername = "localhost";
				$username = "root";
				$password = "";
				$dbname = "mygovhospital";
				$con = new mysqli($servername, $username, $password, $dbname);
				$sql1 = "SELECT * FROM hospital WHERE hshow='N'";
				$result = mysqli_query($con, $sql1);
				$list = array();
				while($row = $result->fetch_assoc())
				{
					$list[] = $row;
				}
				mysqli_close($con);
				$value = array();
				foreach($list as $key=>$val)
				{
					foreach($val as $k=>$v)
					{ 
					// $v is string.
					// And $k is $val array index (0, 1, ....)
					$value[] = $v;		
					}
				}
				$hospitals = array();
				$hospital = array();
				$counter =0;
				$length = count($value);
				for($i=0;$i<$length;$i++)
				{
					$hospital[] = $value[$i];
					$counter++;
					if($counter==7)
					{
						$hospitals[] = $hospital;
						$hospital = array();
						$counter = 0;
					}
				}
				$hospitalNum = count($hospitals);
				if($hospitalNum==0)
					echo '<p>No Records</p>';
				else
				{
					echo '<tr><td>No</td><td>Hospital Name</td><td>Address</td><td>Phone Number</td><td>Longitude</td><td>Latitude</td><td></td></tr>';
					for($i=0;$i<$hospitalNum;$i++)
					{
						$sno=1;
						$hospital = $hospitals[$i];
						$hospitalName = $hospital[1];
						$hospitalAddress = $hospital[2];
						$hospitalPhoneNum = $hospital[3];
						$longitude = $hospital[4];
						$latitude = $hospital[5];
						echo '<tr><td>'.$sno++.'</td><td>'.$hospitalName.'</td><td>'.$hospitalAddress.'</td><td>'.$hospitalPhoneNum.'</td><td>'.$longitude.'</td><td>'.$latitude.'</td>
						<td><a href=hundel.php?rno="'.$hospital[0].'">Undelete</a></td></tr>';
					}
				}
			?>
			</table></td></tr>
