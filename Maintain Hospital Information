			<?php
			$servername = "localhost";
				$username = "root";
				$password = "";
				$dbname = "mygovhospital";
				$con = new mysqli($servername, $username, $password, $dbname);
				$sql1 = "SELECT * FROM hospital WHERE hshow='Y'";
				$result = mysqli_query($con, $sql1);
				$list = array();
				while($row = $result->fetch_assoc())
				{
					$list[] = $row;
				}
				mysqli_close($con);
				$value = array();
				foreach($list as $key=>$val)
				{
					foreach($val as $k=>$v)
					{ 
					// $v is string.
					// And $k is $val array index (0, 1, ....)
					$value[] = $v;		
					}
				}
				$hospitals = array();
				$counter =0;
				$length = count($value);
				for($i=0;$i<$length;$i++)
				{
					$hospital[] = $value[$i];
					$counter++;
					if($counter==7)
					{
						$hospitals[] = $hospital;
						$hospital = array();
						$counter = 0;
					}
				}
				$hospitalNum = count($hospitals);
				for($i=0;$i<$hospitalNum;$i++)
				{
					$hospital = $hospitals[$i];
					$hospitalName = $hospital[1];
					$hospitalAddress = $hospital[2];
					$hospitalPhoneNum = $hospital[3];
					$longitude = $hospital[4];
					$latitude = $hospital[5];
					echo '<tr><td>'.($i+1).'</td><td>'.$hospitalName.'</td><td>'.$hospitalAddress.'</td><td>'.$hospitalPhoneNum.'</td><td>'.$longitude.'</td><td>'.$latitude.'</td>
					<td><a href=hmod.php?rno="'.$hospital[0].'">Modify</a></td>
					<td><a href=hdel.php?rno="'.$hospital[0].'">Delete</a></td></tr>';
				}
			?>
			</table></td></tr>
			<tr><td align=center><hr></td></tr>
			<tr><td><h3>Deleted Records</h3></td></tr>
